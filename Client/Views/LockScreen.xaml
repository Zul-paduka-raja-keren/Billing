<Window x:Class="Client.LockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#1a1a1a">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="PC TERKUNCI" 
                       FontSize="72" 
                       FontWeight="Bold"
                       Foreground="#00ff00"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="Hubungi operator untuk mulai" 
                       FontSize="32" 
                       Foreground="White"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center"/>
            
            <TextBlock x:Name="StatusText"
                       Text="Status: Menunggu..."
                       FontSize="24" 
                       Foreground="#888"
                       Margin="0,40,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>