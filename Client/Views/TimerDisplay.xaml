<Window x:Class="Client.Views.TimerDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waktu Tersisa" 
        Height="150" 
        Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        Left="0"
        Top="0">
    
    <Border Background="#CC000000" 
            CornerRadius="10" 
            Padding="20"
            Margin="10">
        <StackPanel>
            <TextBlock Text="⏱️ WAKTU TERSISA" 
                       FontSize="14" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            
            <TextBlock x:Name="TimeText"
                       Text="00:30:00" 
                       FontSize="36" 
                       FontWeight="Bold"
                       Foreground="#00ff00"
                       HorizontalAlignment="Center"/>
            
            <TextBlock x:Name="CostText"
                       Text="Biaya: Rp 0" 
                       FontSize="12" 
                       Foreground="#ffaa00"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</Window>