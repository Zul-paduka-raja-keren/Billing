<Window x:Class="Server.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Warnet Billing - Server Dashboard" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ’° WARNET BILLING DASHBOARD" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Pendapatan Hari Ini: " 
                                   FontSize="18" 
                                   Foreground="#bdc3c7"/>
                        <TextBlock x:Name="RevenueText" 
                                   Text="Rp 0" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#2ecc71"/>
                        
                        <TextBlock Text=" | Bulan Ini: " 
                                   FontSize="18" 
                                   Foreground="#bdc3c7"
                                   Margin="20,0,0,0"/>
                        <TextBlock x:Name="MonthlyRevenueText" 
                                   Text="Rp 0" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#3498db"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="ServerStatusText"
                               Text="ðŸŸ¢ Server: Running" 
                               FontSize="14" 
                               Foreground="#2ecc71"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <Button Content="âš™ï¸ Settings" 
                            Width="100"
                            Height="35"
                            Margin="5,0"
                            Click="OnSettingsClick"/>
                    
                    <Button Content="ðŸ“Š Reports" 
                            Width="100"
                            Height="35"
                            Margin="5,0"
                            Click="OnReportsClick"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#34495e" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="ðŸ”„ Refresh" 
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="OnRefreshClick"/>
                
                <Button Content="âž• Add Client" 
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="OnAddClientClick"/>
                
                <Button Content="ðŸ’³ Pricing" 
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="OnPricingClick"/>
                
                <Separator Width="1" Background="#7f8c8d" Margin="10,0"/>
                
                <TextBlock Text="Filter:" 
                           FontSize="14" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0,10,0"/>
                
                <ComboBox x:Name="FilterComboBox"
                          Width="120"
                          Height="30"
                          SelectionChanged="OnFilterChanged">
                    <ComboBoxItem Content="Semua" IsSelected="True"/>
                    <ComboBoxItem Content="Aktif"/>
                    <ComboBoxItem Content="Idle"/>
                    <ComboBoxItem Content="Offline"/>
                </ComboBox>
            </StackPanel>
        </Border>
        
        <!-- Client Grid -->
        <DataGrid Grid.Row="2" 
                  x:Name="ClientGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="#1a1a1a"
                  Foreground="White"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#34495e"
                  RowBackground="#2c3e50"
                  AlternatingRowBackground="#34495e"
                  HeadersVisibility="Column"
                  Margin="10">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#34495e"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Padding" Value="10,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.Columns>
                <!-- PC Name -->
                <DataGridTextColumn Header="PC" 
                                    Binding="{Binding Name}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Status -->
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding StatusColor}" 
                                    CornerRadius="10" 
                                    Padding="8,4">
                                <TextBlock Text="{Binding Status}" 
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- IP Address -->
                <DataGridTextColumn Header="IP Address" 
                                    Binding="{Binding IpAddress}" 
                                    Width="130"/>
                
                <!-- Username -->
                <DataGridTextColumn Header="User" 
                                    Binding="{Binding Username}" 
                                    Width="120"/>
                
                <!-- Remaining Time -->
                <DataGridTextColumn Header="Waktu Tersisa" 
                                    Binding="{Binding RemainingTime}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#2ecc71"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Current Cost -->
                <DataGridTextColumn Header="Biaya" 
                                    Binding="{Binding CurrentCost}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#f39c12"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="*" MinWidth="350">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <!-- Start Button -->
                                <Button Content="â–¶ï¸ Start" 
                                        Width="80"
                                        Height="30"
                                        Margin="5,0"
                                        Click="OnStartClick"
                                        Tag="{Binding ClientId}"
                                        Visibility="{Binding ShowStartButton}"/>
                                
                                <!-- Pause Button -->
                                <Button Content="â¸ï¸ Pause" 
                                        Width="80"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#f39c12"
                                        Click="OnPauseClick"
                                        Tag="{Binding ClientId}"
                                        Visibility="{Binding ShowPauseButton}"/>
                                
                                <!-- Resume Button -->
                                <Button Content="â–¶ï¸ Resume" 
                                        Width="80"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#2ecc71"
                                        Click="OnResumeClick"
                                        Tag="{Binding ClientId}"
                                        Visibility="{Binding ShowResumeButton}"/>
                                
                                <!-- Extend Time -->
                                <Button Content="â±ï¸ +30min" 
                                        Width="85"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#9b59b6"
                                        Click="OnExtendClick"
                                        Tag="{Binding ClientId}"
                                        Visibility="{Binding ShowExtendButton}"/>
                                
                                <!-- Payment -->
                                <Button Content="ðŸ’³ Bayar" 
                                        Width="80"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#3498db"
                                        Click="OnPaymentClick"
                                        Tag="{Binding ClientId}"/>
                                
                                <!-- Stop -->
                                <Button Content="â¹ï¸ Stop" 
                                        Width="75"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#e74c3c"
                                        Click="OnStopClick"
                                        Tag="{Binding ClientId}"
                                        Visibility="{Binding ShowStopButton}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>