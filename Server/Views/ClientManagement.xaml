<Window x:Class="Server.Views.ClientManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Management" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        ResizeMode="NoResize">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="➕ Tambah Client Baru" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="Daftarkan PC baru ke sistem" 
                       FontSize="13" 
                       Foreground="#95a5a6"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Client Name -->
            <TextBlock Text="Nama Client *" 
                       FontSize="13" 
                       Foreground="#bdc3c7"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ClientNameInput" 
                     Height="40"
                     FontSize="15"
                     Padding="12"
                     Margin="0,0,0,20"
                     Background="#2c3e50"
                     Foreground="White"
                     BorderBrush="#34495e"/>
            
            <!-- IP Address -->
            <TextBlock Text="IP Address (opsional)" 
                       FontSize="13" 
                       Foreground="#bdc3c7"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="IpAddressInput" 
                     Height="40"
                     FontSize="15"
                     Padding="12"
                     Margin="0,0,0,20"
                     Background="#2c3e50"
                     Foreground="White"
                     BorderBrush="#34495e"
                     Text="192.168.1."/>
            
            <!-- MAC Address -->
            <TextBlock Text="MAC Address (opsional)" 
                       FontSize="13" 
                       Foreground="#bdc3c7"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="MacAddressInput" 
                     Height="40"
                     FontSize="15"
                     Padding="12"
                     Background="#2c3e50"
                     Foreground="White"
                     BorderBrush="#34495e"/>
        </StackPanel>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Content="❌ Batal"
                    Height="45"
                    Margin="0,0,10,0"
                    Background="#7f8c8d"
                    Click="OnCancelClick"/>
            
            <Button Grid.Column="1"
                    Content="✅ Simpan"
                    Height="45"
                    Margin="10,0,0,0"
                    Background="#2ecc71"
                    Click="OnSaveClick"/>
        </Grid>
    </Grid>
</Window>