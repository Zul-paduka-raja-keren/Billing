<Window x:Class="Server.Views.PaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        ResizeMode="NoResize">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ’³ Pembayaran" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock x:Name="ClientNameText"
                       Text="PC-01" 
                       FontSize="16" 
                       Foreground="#95a5a6"
                       Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Amount Input -->
        <Border Grid.Row="1" 
                Background="#2c3e50" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Jumlah Pembayaran" 
                           FontSize="14" 
                           Foreground="#bdc3c7"
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Rp" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1"
                             x:Name="AmountInput" 
                             Text="10000"
                             FontSize="24"
                             FontWeight="Bold"
                             Background="#34495e"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             TextAlignment="Right"/>
                </Grid>
                
                <!-- Quick Amount Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <Button Content="5k" Width="60" Height="30" Margin="5,0" Click="QuickAmount_Click" Tag="5000"/>
                    <Button Content="10k" Width="60" Height="30" Margin="5,0" Click="QuickAmount_Click" Tag="10000"/>
                    <Button Content="20k" Width="60" Height="30" Margin="5,0" Click="QuickAmount_Click" Tag="20000"/>
                    <Button Content="50k" Width="60" Height="30" Margin="5,0" Click="QuickAmount_Click" Tag="50000"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Payment Methods -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Pilih Metode Pembayaran:" 
                       FontSize="14" 
                       Foreground="White"
                       Margin="0,0,0,15"/>
            
            <!-- Cash -->
            <Button Height="65" 
                    Margin="0,0,0,12"
                    Click="OnCashClick"
                    Background="#27ae60">
                <Grid Width="380">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="ðŸ’µ" 
                               FontSize="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="CASH (Tunai)" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Pembayaran langsung ke kasir" 
                                   FontSize="12" 
                                   Foreground="#ecf0f1"/>
                    </StackPanel>
                </Grid>
            </Button>
            
            <!-- QRIS -->
            <Button Height="65" 
                    Margin="0,0,0,12"
                    Click="OnQRISClick"
                    Background="#2c3e50">
                <Grid Width="380">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="ðŸ”²" 
                               FontSize="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="QRIS" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Scan QR untuk bayar" 
                                   FontSize="12" 
                                   Foreground="#bdc3c7"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="2"
                               Text="ðŸ”¥" 
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>
            
            <!-- GoPay -->
            <Button Height="65" 
                    Margin="0,0,0,12"
                    Click="OnGopayClick"
                    Background="#00AA13">
                <Grid Width="380">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="ðŸŸ¢" 
                               FontSize="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="GoPay" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Bayar pakai GoPay" 
                                   FontSize="12" 
                                   Foreground="#ecf0f1"/>
                    </StackPanel>
                </Grid>
            </Button>
            
            <!-- OVO -->
            <Button Height="65" 
                    Click="OnOVOClick"
                    Background="#4C3494">
                <Grid Width="380">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="ðŸ”µ" 
                               FontSize="32"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="OVO" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Bayar pakai OVO" 
                                   FontSize="12" 
                                   Foreground="#ecf0f1"/>
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>
        
        <!-- Footer -->
        <Button Grid.Row="3"
                Content="âŒ Batal"
                Height="45"
                Margin="0,20,0,0"
                Background="#7f8c8d"
                Click="OnCancelClick"/>
    </Grid>
</Window>