<Window x:Class="Server.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Border Background="#1a1a1a" 
            CornerRadius="10"
            BorderBrush="#2c3e50"
            BorderThickness="2">
        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ðŸ” Admin Login" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <TextBlock Text="Username" 
                           Foreground="#bdc3c7" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameInput" 
                         Height="45" 
                         Background="#2c3e50" 
                         Foreground="White" 
                         Padding="15"
                         FontSize="15"
                         BorderBrush="#34495e"
                         Margin="0,0,0,20"/>
                
                <TextBlock Text="Password" 
                           Foreground="#bdc3c7" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordInput" 
                             Height="45" 
                             Background="#2c3e50" 
                             Foreground="White" 
                             Padding="15"
                             FontSize="15"
                             BorderBrush="#34495e"
                             Margin="0,0,0,30"/>
                
                <Button Content="Login" 
                        Height="50" 
                        Background="#2ecc71" 
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="OnLoginClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>