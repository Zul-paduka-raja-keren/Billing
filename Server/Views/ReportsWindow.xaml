<Window x:Class="Server.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laporan Pendapatan" 
        Height="650" 
        Width="1000"
        Background="#1a1a1a"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="ðŸ“Š Laporan Pendapatan" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="Ringkasan pendapatan dan aktivitas billing" 
                       FontSize="14" 
                       Foreground="#95a5a6"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Daily Revenue -->
            <Border Grid.Column="0" 
                    Background="#2c3e50" 
                    CornerRadius="10" 
                    Padding="20"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="ðŸ’° Hari Ini" 
                               Foreground="#bdc3c7" 
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="DailyRevenueText" 
                               Text="Rp 0" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#2ecc71"/>
                    <TextBlock x:Name="DailySessionsText"
                               Text="0 sesi"
                               FontSize="13"
                               Foreground="#95a5a6"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Monthly Revenue -->
            <Border Grid.Column="1" 
                    Background="#2c3e50" 
                    CornerRadius="10" 
                    Padding="20"
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“… Bulan Ini" 
                               Foreground="#bdc3c7" 
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="MonthlyRevenueText" 
                               Text="Rp 0" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#3498db"/>
                    <TextBlock x:Name="MonthlySessionsText"
                               Text="0 sesi"
                               FontSize="13"
                               Foreground="#95a5a6"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Average Session -->
            <Border Grid.Column="2" 
                    Background="#2c3e50" 
                    CornerRadius="10" 
                    Padding="20"
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="â±ï¸ Rata-rata Sesi" 
                               Foreground="#bdc3c7" 
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="AvgDurationText" 
                               Text="0 menit" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#f39c12"/>
                    <TextBlock x:Name="AvgCostText"
                               Text="Rp 0 /sesi"
                               FontSize="13"
                               Foreground="#95a5a6"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Sessions Table -->
        <Border Grid.Row="2" 
                Background="#2c3e50" 
                CornerRadius="10"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Table Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Sesi Hari Ini" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ”„ Refresh"
                                Width="100"
                                Height="32"
                                Margin="0,0,10,0"
                                Click="OnRefreshClick"/>
                        
                        <Button Content="ðŸ“¥ Export"
                                Width="100"
                                Height="32"
                                Background="#9b59b6"
                                Click="OnExportClick"/>
                    </StackPanel>
                </Grid>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="SessionsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="#34495e"
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#2c3e50"
                          RowBackground="#34495e"
                          AlternatingRowBackground="#2c3e50"
                          BorderThickness="0">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2c3e50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Client" 
                                            Binding="{Binding ClientId}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Mulai" 
                                            Binding="{Binding StartTime, StringFormat={}{0:HH:mm}}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Selesai" 
                                            Binding="{Binding EndTime, StringFormat={}{0:HH:mm}}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Durasi" 
                                            Binding="{Binding DurationMinutes}" 
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding DurationMinutes, StringFormat={}{0} menit}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Rate" 
                                            Binding="{Binding RatePerHour, StringFormat=Rp {0:N0}/jam}" 
                                            Width="130"/>
                        <DataGridTextColumn Header="Total" 
                                            Binding="{Binding TotalCost, StringFormat=Rp {0:N0}}" 
                                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#2ecc71"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>