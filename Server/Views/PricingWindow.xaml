<Window x:Class="Server.Views.PricingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pengaturan Harga" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’³ Pengaturan Harga" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="Kelola paket dan harga billing" 
                       FontSize="13" 
                       Foreground="#95a5a6"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Pricing List -->
        <DataGrid Grid.Row="1" 
                  x:Name="PricingGrid"
                  AutoGenerateColumns="False"
                  Background="#2c3e50"
                  Foreground="White"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#34495e"
                  RowBackground="#2c3e50"
                  AlternatingRowBackground="#34495e"
                  CanUserAddRows="False"
                  Margin="0,0,0,15">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#34495e"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="40"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nama Paket" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Durasi (menit)" 
                                    Binding="{Binding DurationMinutes}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Harga/Jam" 
                                    Binding="{Binding RatePerHour, StringFormat=Rp {0:N0}}" 
                                    Width="120"/>
                <DataGridCheckBoxColumn Header="Aktif" 
                                        Binding="{Binding IsActive}" 
                                        Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="âž• Tambah"
                    Width="100"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#2ecc71"
                    Click="OnAddClick"/>
            
            <Button Content="âœï¸ Edit"
                    Width="100"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#3498db"
                    Click="OnEditClick"/>
            
            <Button Content="âŒ Hapus"
                    Width="100"
                    Height="40"
                    Background="#e74c3c"
                    Click="OnDeleteClick"/>
        </StackPanel>
    </Grid>
</Window>